<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.londatiga.android.bluetooth"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <!-- - Aca se indican los permisos que va a necesitar la aplicacion -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <service android:name="soa.sistemaderiego.BlueToothService" />
        <!-- - Defino la activity Principal -->
        <activity
            android:name="soa.sistemaderiego.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- - Defino la activity con el listado de dispositivos de Bluethoot encontrados -->
        <activity
            android:name="soa.sistemaderiego.DeviceListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="soa.sistemaderiego.MainMenuActivity"
            android:parentActivityName="soa.sistemaderiego.MainInformationActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="soa.sistemaderiego.StartDeviceActivity"
            android:parentActivityName="soa.sistemaderiego.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="soa.sistemaderiego.ConfigurationMenuActivity"
            android:parentActivityName="soa.sistemaderiego.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="soa.sistemaderiego.ExceptionConfigurationActivity"
            android:parentActivityName="soa.sistemaderiego.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name="soa.sistemaderiego.CircuitSelectionActivity" />

        <!-- - Defino la activity que se comunica, transfierendo datos de los sensores, con Arduino -->
        <activity android:name="soa.sistemaderiego.MainInformationActivity" >
        </activity>
    </application>

</manifest>